routing:
  /:
    account:
      login - вход
      confirm - подтверждение регистрации
      registragion - регистрация
      update - изменение профильных данных
    article:
      create - создание заявки
      change_status:
        title - accept/not (3 попытки)
        article - accept/not (3 попытки)
      comment - Отправка комментария

database:
  user:
    user_id
    first_name
    last_name
    email
    password
    role
    business_name
    confirm_status
  article:
    article_id
    hash_id # unique for return
    title
    meta_text
    text # todo
    keywords # todo
    author # todo
    status # todo [01234567] где 0 это отказ, а 7 = готовность
    user_id # buyer




